<!DOCTYPE html>
<html lang="en" class="no-js">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Photography Website Concept</title>
    <meta name="description" content="A photography-inspired website layout with an expanding stack slider and a background image tilt effect" />
    <meta name="keywords" content="photography, template, layout, effect, expand, image stack, animation, flickity, tilt" />
    <meta name="author" content="Codrops" />
    <link rel="shortcut icon" href="favicon.ico">
    <link rel="stylesheet" type="text/css" href="third-party-source/photography-website-concept/css/normalize.css" />
    <link rel="stylesheet" type="text/css" href="third-party-source/photography-website-concept/css/flickity.css" />
    <link rel="stylesheet" type="text/css" href="third-party-source/photography-website-concept/css/main.css" />
    <script src="third-party-source/photography-website-concept/js/modernizr.custom.js"></script>
</head>
<body>
<div class="container">
    <div class="hero">
        <div class="hero__back hero__back--static"></div>
        <div class="hero__back hero__back--mover"></div>
        <div class="hero__front"></div>
    </div>
    <header class="codrops-header">
        <div class="">
            <a class="codrops-icon codrops-icon--prev" href="/" title="Previous Demo"><span>Previous Demo</span></a>
            <!--<a class="codrops-icon codrops-icon&#45;&#45;drop" href="http://tympanus.net/codrops/2015/05/06/photography-website-concept/" title="Back to the article"><span>Back to the Codrops article</span></a>-->
        </div>
        <h1 class="codrops-title">秀 <span>光影</span></h1>
        <nav class="menu">
            <a class="menu__item" href="/upload"><span>添图</span></a>
            <a class="menu__item menu__item--current" href="#"><span>光影秀</span></a>
            <a class="menu__item" href="/3d-gallery-room"><span>画廊</span></a>
        </nav>
    </header>
    <div class="stack-slider">
        <div class="stacks-wrapper">
            <% for(let i=0; i < data.length; i++) { %>
                <div class="stack">
                    <h2 class="stack-title"><a href="#" data-text="<%= data[i].title %>"><span><%= data[i].title %></span></a></h2>
                    <% for(let j=0; j < data[i].images.length; j++) { %>
                        <div class="item">
                            <div class="item__content">
                                <img src="uploads/<%= data[i].images[j].title %>" alt="<%= data[i].images[j].title %>" />
                                <h3 class="item__title"><%= data[i].images[j].title %><span class="item__date"><%= data[i].images[j].createDate %></span></h3>
                                <div class="item__details">
                                    <ul>
                                        <li><i class="icon icon-camera"></i><span><%= data[i].images[j].camera %></span></li>
                                        <li><i class="icon icon-focal_length"></i><span><%= data[i].images[j].focalLength %>mm</span></li>
                                        <li><i class="icon icon-aperture"></i><span>&fnof;/<%= data[i].images[j].aperture %></span></li>
                                        <li><i class="icon icon-exposure_time"></i><span><%= data[i].images[j].exposureTime %></span></li>
                                        <li><i class="icon icon-iso"></i><span><%= data[i].images[j].iso %></span></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
            <% } %>
        </div>
        <!-- /stacks-wrapper -->
    </div>
    <!-- /stacks -->
    <img class="loader" src="third-party-source/photography-website-concept/img/three-dots.svg" width="60" alt="Loader image" />
</div>
<!-- /container -->
<!-- Flickity v1.0.0 http://flickity.metafizzy.co/ -->
<script src="third-party-source/photography-website-concept/js/flickity.pkgd.min.js"></script>
<script src="third-party-source/photography-website-concept/js/smoothscroll.js"></script>
<script src="third-party-source/photography-website-concept/js/main.js"></script>
</body>
</html>
