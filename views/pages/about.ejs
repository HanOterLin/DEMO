<!DOCTYPE html>
<html>
<head>
    <% include ../partials/head %>
    <title>About &middot; </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.bootcss.com/datatables/1.10.13/css/jquery.dataTables.min.css" rel="stylesheet">
    <script src="https://cdn.bootcss.com/datatables/1.10.13/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="/javascript/about.js"></script>
</head>
<body class="container">
<header>
    <% include ../partials/header %>
</header>
<main>
    <div class="jumbotron">
        <h2>Users</h2>
        <span id="addButton" class="glyphicon glyphicon-plus" data-target="#addUser"></span>
        <div class="dataTables_wrapper">
            <table id="usersTable" class="dataTable display">
                <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Created At</th>
                    <th>Update At</th>
                    <th>Edit</th>
                    <th>Del</th>
                </tr>
                </thead>
            </table>
        </div>
        <div id="editUser" class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header Edit">
                        <div class="modal-body">
                            <div class="container-fluid">
                                <div class="row">
                                    <div class="form-group">
                                        <div class="col-sm-8">
                                            <div class="form-group">
                                                <label>First Name:</label>
                                                <input id="edit_first_name" class="form-control" type="text"
                                                       placeholder="First Name">
                                                <label>Last Name:</label>
                                                <input id="edit_last_name" class="form-control" type="text"
                                                       placeholder="Last Name">
                                                <input id="edit_user_id" class="form-control" type="hidden">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="saveEdit" class="btn btn-primary orange-btn">Save</button>
                    <button data-dismiss="modal" class="btn cancel-btn">Cancel</button>
                </div>
            </div>
        </div>
        <div id="addUser" class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header Edit">
                        <div class="modal-body">
                            <div class="container-fluid">
                                <div class="row">
                                    <div class="form-group">
                                        <div class="col-sm-8">
                                            <div class="form-group">
                                                <label>First Name:</label>
                                                <input id="add_first_name" class="form-control" type="text"
                                                       placeholder="First Name">
                                                <label>Last Name:</label>
                                                <input id="add_last_name" class="form-control" type="text"
                                                       placeholder="Last Name">
                                                <input id="add_user_id" class="form-control" type="hidden">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="saveAdd" class="btn btn-primary orange-btn">Add</button>
                    <button data-dismiss="modal" class="btn cancel-btn">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</main>
<footer>
    <% include ../partials/footer %>
</footer>
</body>
</html>
